generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  email        String
  name         String
  password     String?
  createdAt    DateTime
  updatedAt    DateTime
  account_type String
  subkey       String   @unique
  groups       Group[]
}

model Group {
  id         Int      @id @default(autoincrement())
  groupname  String
  createdAt  DateTime
  updatedAt  DateTime
  usersubkey String
  user       User     @relation(fields: [usersubkey], references: [subkey], onDelete: Cascade)
  pages      Page[]

  @@unique([groupname, usersubkey])
}

model Page {
  id        Int      @id @default(autoincrement())
  pagename  String
  groupid   Int
  content   Json[]
  createdAt DateTime
  updatedAt DateTime
  group     Group    @relation(fields: [groupid], references: [id], onDelete: Cascade)

  @@unique([pagename, groupid])
}
